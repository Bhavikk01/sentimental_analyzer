<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ECE9E6"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/back"/>

        <EditText
            android:id="@+id/notesTitle"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:text="@string/story_name_here"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/save"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/notesContent"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/type"
                android:hint="@string/type_here"
                android:textColorHint="@color/black"
                android:textSize="20sp"
                android:gravity="start"
                android:padding="15dp"/>
        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center">



        <Button
            android:id="@+id/previousButton"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/button_color"
            android:drawableRight="@drawable/ic_baseline_skip_previous_24"
            app:cornerRadius="70dp"
            android:layout_margin="20dp"
            />


        <Button
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/button_color"
            android:drawableRight="@drawable/ic_baseline_play_arrow_24"
            android:paddingEnd="20dp"
            app:cornerRadius="50dp"
            android:layout_margin="20dp"
            android:visibility="visible"

            />
        <Button
            android:id="@+id/pauseButton"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/button_color"
            android:drawableRight="@drawable/ic_baseline_pause_24"
            android:paddingEnd="20dp"
            app:cornerRadius="50dp"
            android:layout_margin="20dp"
            android:visibility="gone"

            />

        <Button

            android:id="@+id/nextButton"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/button_color"
            android:drawableRight="@drawable/ic_baseline_skip_next_24"
            app:cornerRadius="50dp"
            android:layout_margin="20dp"
            />





    </LinearLayout>

</LinearLayout>